    private void jButtonGenActionPerformed(java.awt.event.ActionEvent evt) {                                           
        recordNum = Integer.parseInt(jTextFieldRecordNumber.getText());
        outputName = jTextFieldFileName.getText();
        
        int typeChoice=0;
        String fieldType = "Empty";
        
        
        for (int i = 0; i < recordNum; i++){
            FieldsA.get(i);
            fieldType = jComb1A.get(i);
            jComb2A.get(i);
            lengthA.get(i);
            range1A.get(i);
            range2A.get(i);
            maskA.get(i);
            
            if(fieldType=="First Name"){
                typeChoice=1;
            }
            
            if(fieldType=="Last Name"){
                typeChoice=2;
            }
            
            if(fieldType=="Gender"){
                typeChoice=3;
            }
            
            if(fieldType=="Address"){
                typeChoice=4;
            }
            
            if(fieldType=="int"){
                typeChoice=5;
            }            
            
            switch (typeChoice){//change switch dependant variable
                case 1: JOptionPane.showMessageDialog(null, "CASE1");//Name
                        try (Writer writer = new BufferedWriter(new OutputStreamWriter(
                            new FileOutputStream(outputName+".txt"), "utf-8"))) {
                            writer.write("something3");
                        } catch (IOException ex){}
                        break;
                case 2: JOptionPane.showMessageDialog(null, "CASE2");//Lname
                        break;
                case 3: JOptionPane.showMessageDialog(null, "CASE3");//Gender
                        break;        
                case 4: JOptionPane.showMessageDialog(null, "CASE4");//Address
                        break;     
                case 5: JOptionPane.showMessageDialog(null, "CASE5");//int
                        break;                         
            }
            
        }
        
        JOptionPane.showMessageDialog(null, recordNum + 
                " records generated to file " + outputName);
    }                                          

    private void jButtonAddActionPerformed(java.awt.event.ActionEvent evt) {                                           
        textFieldNameChosen = jTextFieldName.getText();
        jComboChosen1 = (String)jComboBoxType.getSelectedItem();
        jComboChosen2 = (String)jComboBoxOrdering.getSelectedItem();
        length = Integer.parseInt(jTextFieldLength.getText());
        range1 = Integer.parseInt(jTextFieldRange1.getText());
        range2 = Integer.parseInt(jTextFieldRange2.getText());
        mask = (String)jTextFieldMask.getText();
        
        jTextArea.append(textFieldNameChosen +", ");
        jTextArea.append(jComboChosen1 + ", ");
        jTextArea.append(jComboChosen2 + ", ");
        jTextArea.append(length + ", ");
        jTextArea.append(range1 + " - ");
        jTextArea.append(range2 + ", ");
        jTextArea.append(mask + " ");
        jTextArea.append("\n");
        
        arrayPos++;
        
        FieldsA.add(textFieldNameChosen);
        jComb1A.add(jComboChosen1);
        jComb2A.add(jComboChosen2);
        lengthA.add(length);
        range1A.add(range1);
        range2A.add(range2);
        maskA.add(mask);
              
        jTextFieldName.setText("");
        jTextFieldLength.setText("");
        jTextFieldRange1.setText("");
        jTextFieldRange2.setText("");
        jTextFieldMask.setText("");        
        //jTextFieldLength.setEditable(false);
    }                                          

